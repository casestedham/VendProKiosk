<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.VendProKiosk" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an            animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_icon_background</item> <!-- Changed to use the new layer-list drawable -->
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <!-- @style/Theme.VendProKiosk is assumed to be your main app theme defined elsewhere. -->
        <item name="postSplashScreenTheme">@style/Theme.VendProKiosk</item>
    </style>
</resources>